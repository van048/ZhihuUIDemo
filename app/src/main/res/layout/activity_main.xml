<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ben.cn.zhihuuidemo.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/main_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_header_height"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_behavior="@string/scrolling_header_behavior" />

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_height"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_behavior="@string/scrolling_bottom_behavior" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="@dimen/main_fab_size"
        android:layout_height="@dimen/main_fab_size"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_behavior="@string/scrolling_fab_behavior" />


</android.support.design.widget.CoordinatorLayout>
